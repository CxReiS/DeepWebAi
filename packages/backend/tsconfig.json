{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "typeRoots": [
      "./node_modules/@types",
      "../shared-types/node_modules/@types"
    ],
    "paths": {
      "@deepwebai/shared-types/*": ["../shared-types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
