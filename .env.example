# === GENEL ===
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# === ZORUNLU (Turbo global) ===
DATABASE_URL=postgresql://USER:PASS@127.0.0.1:5432/deepwebai

# === AUTH / JWT ===
JWT_SECRET=change_this
OAUTH_GOOGLE_ID=
OAUTH_GOOGLE_SECRET=
OAUTH_GITHUB_ID=
OAUTH_GITHUB_SECRET=
OAUTH_DISCORD_ID=
OAUTH_DISCORD_SECRET=
OAUTH_REDIRECT_URL=https://your-frontend.vercel.app/api/auth/callback
OAUTH_REDIRECT_URL_LOCAL=http://localhost:3000/api/auth/callback

# === REDIS / RATE LIMIT (Upstash veya klasik) ===
REDIS_URL=redis://default:pass@127.0.0.1:6379
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# === REALTIME (ABLY) ===
ABLY_API_KEY=
VITE_ABLY_KEY=${ABLY_API_KEY}

# === E-POSTA (SendGrid; SMTP kullanacaksan bunları boş bırak) ===
SENDGRID_API_KEY=
EMAIL_FROM=noreply@your-domain.com

# === HATA İZLEME (Sentry) ===
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_DSN=${SENTRY_DSN}

# === FEATURE FLAGS ===
# Basit: Vercel Edge Config (Vercel enjekte edebilir)
EDGE_CONFIG=
# İleri: GrowthBook (client key public olabilir)
GROWTHBOOK_API_HOST=
GROWTHBOOK_CLIENT_KEY=
VITE_GROWTHBOOK_CLIENT_KEY=${GROWTHBOOK_CLIENT_KEY}

# === ANALYTICS ===
VERCEL_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=your-domain.com
PLAUSIBLE_API_HOST=plausible.io
VITE_ENABLE_ANALYTICS=true
VITE_PLAUSIBLE_DOMAIN=${PLAUSIBLE_DOMAIN}
VITE_PLAUSIBLE_API_HOST=${PLAUSIBLE_API_HOST}

# === DOSYA DEPOLAMA (GCS) ===
GCP_PROJECT_ID=
GCS_BUCKET=your-bucket
GCS_UPLOAD_BASE_URL=https://storage.googleapis.com

# === FRONTEND (Vite) ===
VITE_API_URL=https://api.your-domain.com
VITE_ENV=production
