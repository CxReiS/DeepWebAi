{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "program": "${workspaceFolder}/packages/backend/src/server.ts",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Frontend Debug (Vite)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/frontend"
    }
  ]
}
