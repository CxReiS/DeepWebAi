{
  "name": "deepwebai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "DeepWebAI - AI-powered conversation and content generation platform",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.14.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "vitest --config tests/vitest.config.ts run",
    "test:integration": "vitest --config tests/vitest.config.ts run tests/integration/",
    "test:e2e": "playwright test tests/e2e/",
    "test:auth": "vitest run tests/unit/backend/auth.test.ts tests/unit/backend/mfa.test.ts tests/unit/backend/oauth.test.ts",
    "test:auth-integration": "vitest run tests/integration/auth-mfa-oauth-flow.spec.ts",
    "test:auth-e2e": "playwright test tests/e2e/auth-complete-flow.spec.ts",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "rimraf dist build lib",
    "db:migrate": "npx tsx scripts/migrate.ts",
    "db:seed": "npx tsx scripts/seed.ts",
    "db:reset": "node scripts/reset-db.js",
    "test:deepwebai-flag": "node scripts/test-deepwebai-flag.js",
    "test:growthbook-flag": "node scripts/test-growthbook-flag.js",
    "demo:feature-flags": "npx tsx scripts/demo-feature-flags.ts",
    "demo:feature-flags:interactive": "npx tsx scripts/demo-feature-flags.ts --interactive"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.14.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.3",
    "turbo": "^2.1.0",
    "typescript": "^5.5.2",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@growthbook/growthbook": "^1.6.0",
    "@neondatabase/serverless": "1.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0"
  },
  "workspaces": [
    "packages/*",
    "libs/*"
  ]
}
