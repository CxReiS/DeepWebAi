{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DATABASE_URL"],
  "globalDependencies": [".env"],
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "node_modules/.prisma/client/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "test": {
      "outputs": []
    },
    "start": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
